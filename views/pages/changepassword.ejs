<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <title>Invoices</title>
    <style>
        body {
            background-color: #fafafa !important;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            margin: 0;
            padding: 0;
        }

        .form-horizontal .form-group {
            margin-right: 0px !important;
            margin-left: -0px !important;
        }

        .login_main {
            display: flex;
            justify-content: center;
        }

        .btn-default:hover {
            color: #fff;
            background: #000000;
            border: none;
        }

        .login_inner {
            flex-direction: column;
            box-shadow: 0 0 20px 1px #0000002b;
            width: 563px;
            margin: auto;
            background: #fff;
            margin-bottom: 90px;
            margin-top: 230px;
            border-radius: 7px;
            padding: 30px 30px;
        }

        h2.login_des {
            text-align: center;
            margin: 0px 0 20px 0;
            font-weight: 500;
            font-size: 25px;
        }

        .btn-default {
            color: #fff;
            width: 100%;
            padding: 12px;
            background-color: #000;
            border-color: #ffff;
        }

        .error {
            margin: 15px auto;
            width: auto;
        }

        input#email,
        input#password {
            display: block;
            box-shadow: none;
            padding: 4px;
            border-radius: 0px;
            width: 100%;
            height: 45px;
            border: none;

            border-bottom: 1px solid #e4e0e0;
            font-family: 'Roboto', sans-serif;
            font-weight: 400;
            font-size: 15px;
            transition: 0.2s ease;
            background: transparent;
            margin-bottom: 7px;
        }
        .sub_btn button {
            margin: 0 1rem 0 0;
            border: none;
            padding: 8px 35px;
            background: #000;
            color: #fff !important;
            font-size: 16px;
        }
        .sub_btn button a {
            color: #fff;
        }
    </style>
    <script> if (localStorage.getItem('currentUser')) {

            console.log("somebody loged in");

        }
        else {
            window.location.replace('/')
        }
    </script>
</head>

<body>



    <div class="login_main">
        <div class="login_inner">

            <form class="form-horizontal" method="POST">
                <legend>
                    <h2 class="login_des">Change Password</h2>
                </legend>

                <% if(typeof(message)!='undefined') { %> <div class="alert alert-success " role="alert">
                    <%= message%>
                    <a href="/">Go Back To Login</a>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <%}%>
                    <% if(typeof(err1)!='undefined') { %> <div class="alert alert-danger " role="alert">
                    <%= err1%>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <%}%>
                    <% if(typeof(err2)!='undefined') { %> <div class="alert alert-danger " role="alert">
                    <%= err2%>


                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <%}%>
     
                    <div class="login">
            <div class="form-group">
               
                <div class="email_input">
                 <input type="password" name="oldpassword" class="form-control" id="oldpassword" placeholder="Enter Old Password" required>
                </div>
            </div>
            <div class="form-group">
               
                <div class="email_input">
                    <input type="password" name="newpassword" class="form-control" onkeyup="comparepassword()" id="newpassword" placeholder="Enter New Password(Min 8 Characters)"
                        required>
                </div>
            </div>
                <div class="email_input">
                    <input type="password" name="confirmpassword" class="form-control" id="confirmpassword" onkeyup="comparepassword()"  placeholder="Enter New Password Again"
                        required>
                </div>
            </div>

                <div class="offset_btn">
                    <button type="submit" id="submit" class="btn btn-primary">Next</button>
                </div>
          
            <div class="offset_btn">
                    <a href="/home"></a><button id="click" class="btn btn-primary" >Back</button></a>
            </div>
           
          </form>

        </div>

    </div>

    <script>
        //   var isValidated  =false
        function check(e) {
            e.preventDefault()
            console.log(document.getElementById("confirmpassword").nodeValue)
            return false
        }

        function comparepassword() {
            if (document.getElementById("newpassword").value == document.getElementById("confirmpassword").value && newpassword.value.length >= 8) {
                console.log("pass matched");
                $("#submit").removeAttr("disabled");
                return true
            }
            else {
                $("#submit").attr("active", "");
                console.log('Didnt Matched')
            }
        }
    </script>

</body>
</html>